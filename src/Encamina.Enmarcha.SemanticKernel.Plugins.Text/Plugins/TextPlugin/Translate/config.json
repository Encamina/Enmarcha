{
  "schema": 1,
  "description": "Translate a given input text",
  "execution_settings": {
    "default": {
      "max_tokens": 2000,
      "temperature": 0.1,
      "top_p": 1.0,
      "presence_penalty": 0.0,
      "frequency_penalty": 0.0
    }
  },
  "input_variables": [
    {
      "name": "input",
      "description": "The input text to translate",
      "is_required": true
    },   
    {
      "name": "locale",
      "description": "Language in which the translation will be generated",      
      "is_required": true
    }
  ]
}
